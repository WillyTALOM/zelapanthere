{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Inscrivez-vous</h1>

    {{ form_start(registrationForm) }}

<div class="row">
	<div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
		{{ form_row(registrationForm.firstName, {
		label: 'Prénom'
		}) }}

	</div>
</div>
<div class="row">
	<div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
		{{ form_row(registrationForm.lastName, {
		label: 'Nom'
		}) }}


	</div>
</div>
<div class="row">
	<div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
		{{ form_row(registrationForm.phone, {
		label: 'Numéro de téléphone'
		}) }}


	</div>
</div>
<div class="row">
	<div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
		{{ form_row(registrationForm.email) }}


	</div>
</div>
{% for address in registrationForm.addresses %}

	<div class="col-3">
		{{ form_row(address.address , {
		'label': 'Adresse',
		'attr': {
		'placeholder': 'Ex: 2 Rue du Général Leclerc'
		}
		}) }}
	</div>

	<div class="col-3">
		{{ form_row(address.additional , {
		'label': 'Adresse complémentaire',
		'attr': {
		'placeholder': ''
		}
		}) }}
	</div>

	<div class="col-3">
		{{ form_row(address.zip , {
		'label': 'Code postale',
		'attr': {
		'placeholder': 'Ex: 75001'
		}
		}) }}

	</div>

	<div class="col-3">
		{{ form_row(address.city , {
		'label': 'Ville',
		'attr': {
		'placeholder': 'Ex: Paris'
		}
		}) }}
	</div>

	<div class="col-3">
		{{ form_row(address.country , {
		'label': 'Pays',
		'attr': {
		'placeholder': '--- Selectionné ---'
		}
		}) }}
	</div>

	{% endfor %}

<div class="row">
	<div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
		{{ form_row(registrationForm.plainPassword.first, {
		label: 'Mot de passe'
		}) }}
	</div>

</div>
<div class="row">
	<div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
		{{ form_row(registrationForm.plainPassword.second, {
		label: 'Répétez mot de passe'
		}) }}


	</div>

</div>
<div class="row">
	<div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
		{{ form_row(registrationForm.showPassword, {
		'label': 'afficher le mot de passe'
		}) }}

	</div>

</div>

<div class="row mb-5">
	<div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
		{{ form_row(registrationForm.agreeTerms, {
		label: 'J\'accepte les Conditions Générales d\'Utilisation'

		}) }}

		<button type="submit" class="buttonb text-decoration-none">S'inscrire</button>


	</div>
</div>


{{ form_end(registrationForm) }}
{% endblock %}
