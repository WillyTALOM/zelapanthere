{% extends 'Admin/baseAdmin.html.twig' %}

{% block title %}catégories{% endblock %}

{% block body %}

<h1 class="pb-5 text-center">Liste de commentaire</h1>

<table class="table table-hover table-sm text-center align-middle text-center">
    <thead class="table-dark">
        <tr>
            <th>N°</th>
            <th>Nom</th>
            <th>Commentaire</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for comment in comments|reverse %}
        <tr>
            <td>{{ loop.revindex }}</td>
            <td>{{comment.author.firstName ~ " " ~ comment.author.lastName}}</td>
            <td>{{comment.content}}</td>
            <td>
                {# <a href="{{ path('category_update', {'id': category.id}) }}"><i
                        class="bi bi-pencil-square text-primary"></i></a> #}
                <a href="{{ path('comment_delete', {'id': comment.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire?') || event.preventDefault()"><i
                        class="bi bi-trash3 text-danger"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>


