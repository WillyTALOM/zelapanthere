{% extends "admin/baseAdmin.html.twig" %}

{% block title %}{{ app.request.attributes.get('_route') == 'create_category' ? 'création' : 'modification' }}
category{% endblock %}

{% block body %}

<h1 class="mb-5 text-center">{{ app.request.attributes.get('_route') == 'create_category' ? 'Créer' : 'Modifier' }} une categorie
</h1>



{{ form_start(categoryForm) }}

<div class="row">
    <div class="col-3">

        {{ form_label(categoryForm.name, 'Nom') }}
        {{ form_errors(categoryForm.name) }}
        {{ form_widget(categoryForm.name, {
        'attr': {
        'placeholder': 'Ex.: Montres'
        }
        }) }}
        {{ form_help(categoryForm.name) }}
    </div>
    <div class="col-6">
            {{ form_row(categoryForm.description, {
            'label': 'Description'
            }) }}
        </div>
        <div class="col-3">
            {{ form_row(categoryForm.image, {
            'label': 'Images'
            }) }}
        </div>




    <div class="row">
        <div class="col-12 text-end my-3">
            <a href="{{ path('admin_category')}}" class="btn btn-outline-danger me-3">Annuler</a>
            <button class="btn btn-success">{{ app.request.attributes.get('_route') == 'create_category' ? 'Créer' :
                'Modifier' }} </button>
        </div>
    </div>

</div>

{{ form_end(categoryForm) }}

{% endblock %}