{% extends "Admin/baseAdmin.html.twig" %}

{% block title %}{{ app.request.attributes.get('_route') == 'carrier_create' ? 'création' : 'modification' }}
transporteur{% endblock %}

{% block body %}

<h1 class="mb-5 text-center">{{ app.request.attributes.get('_route') == 'carrier_create' ? 'Créer' : 'Modifier' }} un transporteur
</h1>

{{ form_start(carrierForm) }}

<div class="row">
    <div class="col-5">
        {{ form_row(carrierForm.name, {
        'label': 'Nom',
        'attr': {
        'placeholder': 'Ex.: Mondial Relay'
        }
        }) }}
    </div>
    <div class="col-2">
        {{ form_row(carrierForm.price, {
        'label': 'Prix (en €)',
        'attr': {
        'placeholder': 'Ex.: 12,34'
        }
        }) }}
    </div>
    <div class="col-5">
        {{ form_row(carrierForm.image, {
        'label': 'Image',
        'attr': {
        'placeholder': 'Ex.: 123.45'
        }
        }) }}
    </div>
</div>

<div class="row">
    <div class="col-12 text-end my-3">
        <a href="{{ path('admin_carriers')}}" class="btn btn-outline-danger me-3">Annuler</a>
        <button class="btn btn-success">{{ app.request.attributes.get('_route') == 'carrier_create' ? 'Créer' :
            'Modifier' }} </button>
    </div>
</div>

{{ form_end(carrierForm) }}

{% endblock %}