{% extends 'Admin/baseAdmin.html.twig' %}

{% block title %}Détail du {{ product.name }}{% endblock %}

{% block body %}
    <h1 class="pb-5 text-center">Détail du produit {{ product.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img src= "{{ asset('assets/uploads/products/mini/300x300-' ~ product.image[4].name )}}"/>
                    <img src= "{{ asset('assets/uploads/products/mini/300x300-' ~ product.image[3].name )}}"/>
                    <img src= "{{ asset('assets/uploads/products/mini/300x300-' ~ product.image[2].name )}}"/>
                    <img src= "{{ asset('assets/uploads/products/mini/300x300-' ~ product.image[1].name )}}"/>
                    <img src= "{{ asset('assets/uploads/products/mini/300x300-' ~ product.image[0].name )}}"/>
                </td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ product.slug }}</td>
            </tr>
            <tr>
                <th>Abstract</th>
                <td>{{ product.abstract }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price|number_format(2, ',', ' ') }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ product.reference }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Reduction</th>
                <td>{{ product.reduction|number_format(2, ',', ' ') }}</td>
            </tr>
            <tr>
                <th>PriceSold</th>
                <td>{{ product.priceSold|number_format(2, ',', ' ') }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
		<div class="col-12 text-end my-3">
			<a href="{{ path('admin_product_list') }}" class="btn btn-outline-danger me-3">Retourner à l'accueil</a>
			<button class="btn btn-outline-success">Modifier <a href="{{ path('admin_product_edit', {'id': product.id}) }}"></a></button>
		</div>
	</div>


{% endblock %}
